# Server
PORT=3000
BASE_URL=http://localhost:3000

# Xero OAuth2 credentials (from Xero Developer app)
XERO_CLIENT_ID=
XERO_CLIENT_SECRET=
XERO_REDIRECT_URI=
XERO_WEBHOOK_KEY=

# Chart of Accounts codes (replace if your Xero uses different codes)
MEDIA_REVENUE_CODE=400
MEDIA_COST_CODE=500
MEDIA_ACCRUAL_CONTROL_CODE=850

# VAT tax rates (names must match your Xero Tax Rate names)
SALES_TAX_NAME=20% (VAT on Income)
PURCHASE_TAX_NAME=20% (VAT on Expenses)

# Auto-approve supplier bills after recoding (true/false)
AUTO_APPROVE_BILLS=true
